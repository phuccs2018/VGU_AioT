<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textTopGarbageClassification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Garbage Classification"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:id= "@+id/textOrganicRubbish"
                    android:layout_width="205dp"
                    android:layout_height="80dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="Organic Rubbish"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
                <ImageView
                    android:id="@+id/vocoClassification"
                    android:layout_width="205dp"
                    android:layout_height="400dp"
                    android:background="@drawable/huuco"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:id = "@+id/organicRubbishPercentageText"
                    android:layout_width="205dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="84dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="50%"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:id= "@+id/textInorganicRubbish"
                    android:layout_width="205dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="Inorganic Rubbish"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
                <ImageView
                    android:id="@+id/huucoClassification"
                    android:layout_width="205dp"
                    android:layout_height="400dp"
                    android:background="@drawable/voco"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:id = "@+id/inorganicRubbishPercentageText"
                    android:layout_width="205dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="84dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="50%"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/backGarbageClassification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>