<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GarbageClassification">
    <TextView
        android:id="@+id/textTopGarbageClassification"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Garbage Classification"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id= "@+id/textOrganicRubbish"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="Organic Rubbish"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textTopGarbageClassification"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id= "@+id/textInorganicRubbish"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Inorganic Rubbish"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textTopGarbageClassification"
        app:layout_constraintVertical_bias="0.126" />

    <ImageView
        android:id="@+id/vocoClassification"
        android:layout_width="205dp"
        android:layout_height="400dp"
        android:background="@drawable/voco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textOrganicRubbish"
        app:layout_constraintVertical_bias="0.321" />

    <ImageView
        android:id="@+id/huucoClassification"
        android:layout_width="205dp"
        android:layout_height="400dp"
        android:background="@drawable/huuco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textOrganicRubbish"
        app:layout_constraintVertical_bias="0.321" />


    <TextView
        android:id = "@+id/organicRubbishPercentageText"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginBottom="84dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id = "@+id/inorganicRubbishPercentageText"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginBottom="84dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/backGarbageClassification"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>